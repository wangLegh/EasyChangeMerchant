<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_bg"
    android:orientation="vertical">

    <include layout="@layout/header_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_mine_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/about_logo_iv"/>
            <TextView
                android:id="@+id/tv_mine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_mine_header"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:text="V1.0.0"
                android:textColor="@color/textcolor"
                android:textSize="14dip"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/def_bg"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/white">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/about_weixin"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:paddingLeft="15dip"
                android:text="微信"/>

            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dip"
                android:text="1234567890"
            />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/def_bg"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/white">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/about_phone"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:paddingLeft="15dip"
                android:text="电话"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dip"
                android:text="15022351156"
            />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/def_bg"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/white">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/about_youxiang"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:paddingLeft="15dip"
                android:text="邮箱"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dip"
                android:text="1234567890@163.com"
            />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/def_bg"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/white">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/about_guanwang"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:paddingLeft="15dip"
                android:text="官网"/>

            <TextView
                android:id="@+id/tv_guanwang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dip"
                android:text="www.123.com"
            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>