<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_bg"
    android:orientation="vertical">

    <include layout="@layout/header_view"/>
    <LinearLayout
        android:gravity="center"

        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="150dip">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="碳积分总量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tanjifen_num"
            android:layout_marginTop="8dip"
            android:textSize="12sp"
            android:textColor="@color/text_yel"
            android:text="10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_no_more"
        android:background="@color/white"
        android:paddingLeft="15dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="可换取的废品为0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.easychange.admin.easychangemerchant.views.WanRecyclerView
        android:layout_marginTop="8dip"
        android:background="@color/white"
        android:id="@+id/tanjifen_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>