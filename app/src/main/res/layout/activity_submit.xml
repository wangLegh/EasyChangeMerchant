<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/act_submit_audit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/act_submit_audit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="审核中"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                />

            <View
                android:id="@+id/act_submit_audit_line"
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#ededed"
            android:layout_gravity="center_vertical"
            />

        <RelativeLayout
            android:id="@+id/act_submit_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/act_submit_pass_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="未通过"
                android:textSize="16sp"
                android:textColor="#333"
                />

            <View
                android:id="@+id/act_submit_pass_line"
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/act_submit_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>