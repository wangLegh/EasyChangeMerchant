<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_bg"
    android:orientation="vertical">

    <include layout="@layout/header_view"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="8dip"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_about_liuyan"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dip">
            <TextView
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:text="在线留言"
                android:paddingLeft="15dip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_margin="15dip"
                android:layout_gravity="center"
                android:src="@drawable/right3x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginRight="15dip"
            android:layout_marginLeft="15dip"
            android:background="@color/def_bg"
            android:layout_width="match_parent"
            android:layout_height="1dip"></View>
        <LinearLayout
            android:id="@+id/layout_about_phone"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dip">
            <TextView
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:text="客服电话"
                android:paddingLeft="15dip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_margin="15dip"
                android:layout_gravity="center"
                android:src="@drawable/right3x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginRight="15dip"
            android:layout_marginLeft="15dip"
            android:background="@color/def_bg"
            android:layout_width="match_parent"
            android:layout_height="1dip"></View>
        <LinearLayout
            android:id="@+id/layout_about_us"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dip">
            <TextView
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:text="关于我们"
                android:paddingLeft="15dip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_margin="15dip"
                android:layout_gravity="center"
                android:src="@drawable/right3x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginRight="15dip"
            android:layout_marginLeft="15dip"
            android:background="@color/def_bg"
            android:layout_width="match_parent"
            android:layout_height="1dip"></View>
    </LinearLayout>
    <TextView
        android:id="@+id/act_close_all"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/audit_btn_bg"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>